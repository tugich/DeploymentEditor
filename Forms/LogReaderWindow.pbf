  SetWindowColor(LogReaderWindow, RGB(255,255,255))
  WebView_LogReader = WebViewGadget(#PB_Any, 0, 0, 1000, 800)
EndProcedure

Procedure ResizeGadgetsLogReaderWindow()
  Protected FormWindowWidth, FormWindowHeight
  FormWindowWidth = WindowWidth(LogReaderWindow)
  FormWindowHeight = WindowHeight(LogReaderWindow)
  ResizeGadget(WebView_LogReader, 0, 0, FormWindowWidth - 0, FormWindowHeight - 0)
EndProcedure

Procedure LogReaderWindow_Events(event)
