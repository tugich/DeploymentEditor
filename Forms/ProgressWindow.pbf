Global ProgressWindow

Global Text_ProgressTitle, Container_0, Text_ProgressStatus


Procedure OpenProgressWindow(x = 0, y = 0, width = 600, height = 200)
  ProgressWindow = OpenWindow(#PB_Any, x, y, width, height, "Deployment Editor - Progress", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered)
  SetWindowColor(ProgressWindow, RGB(255,255,255))
  Text_ProgressTitle = TextGadget(#PB_Any, 20, 20, 560, 25, "Task is running:")
  SetGadgetColor(Text_ProgressTitle, #PB_Gadget_FrontColor,RGB(0,64,128))
  SetGadgetColor(Text_ProgressTitle, #PB_Gadget_BackColor,RGB(255,255,255))
  Container_0 = ContainerGadget(#PB_Any, 0, 50, 600, 2)
  SetGadgetColor(Container_0, #PB_Gadget_BackColor,RGB(0,64,128))
  CloseGadgetList()
  Text_ProgressStatus = TextGadget(#PB_Any, 20, 70, 560, 110, "Please wait...")
  SetGadgetColor(Text_ProgressStatus, #PB_Gadget_BackColor,RGB(255,255,255))
EndProcedure

Procedure ProgressWindow_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

