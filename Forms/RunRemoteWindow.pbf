Global RunRemoteWindow


Procedure OpenRunRemoteWindow(x = 0, y = 0, width = 600, height = 400)
  RunRemoteWindow = OpenWindow(#PB_Any, x, y, width, height, "Run on Remote Machine", #PB_Window_SystemMenu)
EndProcedure

Procedure RunRemoteWindow_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

