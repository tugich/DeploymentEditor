Procedure OpenImportExeWindow(x = 0, y = 0, width = 600, height = 360)
  ImportExeWindow = OpenWindow(#PB_Any, x, y, width, height, "Import EXE", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered)
  SetWindowColor(ImportExeWindow, RGB(255,255,255))
  IEW_Container_Title = ContainerGadget(#PB_Any, 0, 0, 600, 100)
  SetGadgetColor(IEW_Container_Title, #PB_Gadget_BackColor,RGB(241,243,249))
  IEW_Text_Title = TextGadget(#PB_Any, 70, 25, 510, 30, "Import Windows Executable (EXE)")
  SetGadgetColor(IEW_Text_Title, #PB_Gadget_FrontColor,RGB(50,50,50))
  SetGadgetColor(IEW_Text_Title, #PB_Gadget_BackColor,RGB(241,243,249))
  SetGadgetFont(IEW_Text_Title, FontID(#Font_ImportExeWindow_0))
  IEW_Text_Subtitle = TextGadget(#PB_Any, 70, 60, 510, 25, "Convert any *.exe file to Deployment Editor / PSADT Project:")
  SetGadgetColor(IEW_Text_Subtitle, #PB_Gadget_BackColor,RGB(241,243,249))
  CloseGadgetList()
  IEW_Image_Icon = ImageGadget(#PB_Any, 20, 20, 32, 32, ImageID(Img_ImportExeWindow_0))
  IEW_Text_FilePath = TextGadget(#PB_Any, 70, 120, 510, 25, "Installer file (*.exe)")
  SetGadgetColor(IEW_Text_FilePath, #PB_Gadget_BackColor,RGB(255,255,255))
  IEW_String_FilePath = StringGadget(#PB_Any, 70, 150, 450, 25, "", #PB_String_BorderLess)
  SetGadgetColor(IEW_String_FilePath, #PB_Gadget_BackColor,RGB(255,255,255))
  DisableGadget(IEW_String_FilePath, 1)
  IEW_Text_ProjectPath = TextGadget(#PB_Any, 70, 200, 510, 25, "Project path")
  SetGadgetColor(IEW_Text_ProjectPath, #PB_Gadget_BackColor,RGB(255,255,255))
  IEW_String_ProjectPath = StringGadget(#PB_Any, 70, 230, 450, 25, "", #PB_String_BorderLess)
  SetGadgetColor(IEW_String_ProjectPath, #PB_Gadget_BackColor,RGB(255,255,255))
  DisableGadget(IEW_String_ProjectPath, 1)
  IEW_Button_FilePath = ButtonGadget(#PB_Any, 530, 150, 50, 25, "...")
  IEW_Button_ProjectPath = ButtonGadget(#PB_Any, 530, 230, 50, 25, "...")
  IEW_Button_CreateProject = ButtonGadget(#PB_Any, 460, 300, 120, 35, "Create Project")
  IEW_Container_Line = ContainerGadget(#PB_Any, 0, 280, 600, 1)
