EndProcedure

Procedure ImportExeWindow_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case IEW_Button_FilePath
          ImportExeWindow_SelectFilePath(EventType())          
        Case IEW_Button_ProjectPath
          ImportExeWindow_SelectProjectPath(EventType())          
        Case IEW_Button_CreateProject
          ImportExeWindow_CreateProject(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure



